# Ansible managed: Prometheus configuration for GPU monitoring

global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  # DCGM Exporter for Nvidia GPU metrics
  - job_name: 'dcgm-exporter'
    static_configs:
      - targets: ['dcgm-exporter:9400']
        labels:
          instance: '{{ ansible_hostname }}'

  # Node exporter (if you install it separately)
  - job_name: 'node'
    static_configs:
      - targets: ['localhost:9100']
        labels:
          instance: '{{ ansible_hostname }}'
